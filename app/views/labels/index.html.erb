

<h1>ラベル一覧</h1>
<div class = "tyuo2">
<table class="table table-bordered ">
  <thead>
    <tr>
      <th>ラベル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
      <% if label.user_id == current_user.id %>
        <td><%= label.name %></td>
        <td><%= link_to fa_icon("edit"), edit_label_path(label.id) %></td>
        <td><%= link_to fa_icon("trash"), label, method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ラベル作成', new_label_path, class:"btn btn-primary" %>
</div>